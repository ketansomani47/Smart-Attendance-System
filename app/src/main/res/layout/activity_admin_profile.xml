<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.jaishree.attendance.admin.AdminProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/activity_admin_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/college"
        android:layout_centerHorizontal="true"
        android:id="@+id/circleImageView"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/oval"
            android:text="A"
            android:gravity="center"
            android:textSize="44sp"
            android:id="@+id/textViewImg"/>
    </FrameLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameLayout"
        android:layout_marginTop="10dp"
        android:hint="Admin Name"
        android:textSize="18sp"
        android:id="@+id/editTextName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:layout_marginTop="10dp"
        android:hint="Admin Mobile"
        android:textSize="18sp"
        android:id="@+id/editTextMobile"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMobile"
        android:layout_marginTop="10dp"
        android:hint="Admin Email"
        android:textColor="#282727"
        android:id="@+id/textViewEmail"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEmail"
        android:layout_marginTop="10dp"
        android:hint="Admin Password"
        android:textColor="#282727"
        android:id="@+id/textViewPassword"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="#282727"
        android:id="@+id/textViewGender"
        android:layout_below="@id/textViewPassword"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup"
                android:layout_below="@id/textViewGender">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#282727"
                android:textSize="18sp"
                android:id="@+id/radioButtonMale"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#282727"
                android:textSize="18sp"
                android:id="@+id/radioButtonFemale"
                />
            </RadioGroup>

<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="10dp"
        android:hint="Admin Address"
        android:textSize="18sp"
        android:id="@+id/editTextAddress"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/editTextAddress"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="15dp"
        android:textColor="#282727"
        android:id="@+id/buttonSave"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@id/editTextAddress"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="15dp"
        android:textColor="#282727"
        android:id="@+id/buttonCancel"/>

</RelativeLayout>
</ScrollView>