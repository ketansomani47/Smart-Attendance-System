<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:padding="20dp"
    tools:context="com.example.jaishree.attendance.Teacher.TeacherChangePassword">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/changepassword"
        android:id="@+id/circleChangePassword"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleChangePassword"
        android:layout_marginTop="30dp"
        android:id="@+id/relLayout1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/imageViewEmail1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewEmail1"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="Ketansomani47@gmail.com"
            android:id="@+id/textViewEmail"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relLayout1"
        android:id="@+id/relLayout2"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/imageViewPass2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:id="@+id/textView1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewPass2"
            android:layout_toLeftOf="@id/textView1"
            android:hint="New Password"
            android:paddingLeft="12dp"
            android:textColor="#000"
            android:id="@+id/editTextChngePass"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relLayout2"
        android:id="@+id/relLayout3"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/imageViewCPass3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:id="@+id/textView2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewCPass3"
            android:layout_toLeftOf="@id/textView2"
            android:hint="Confirm Password"
            android:paddingLeft="12dp"
            android:textColor="#000"
            android:id="@+id/editTextCnfrmPass"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:padding="20dp"
        android:layout_below="@id/relLayout3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/saveChngeBtn"/>
</RelativeLayout>
